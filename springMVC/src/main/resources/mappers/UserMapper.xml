<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="edu.study.mapper.userMapper">
	<insert id="insert" parameterType="userVO">
		insert into user(uid,upw,uname,ugen) values(#{uid},#{upw},#{uname},#{ugen})
	</insert>
	<select id="selectLogin" resultType="userVO" parameterType="userVO">
		select uno, uid, uname from user where uid = #{uid} and upw = #{upw}
	</select>
	
	<select id="selectById" resultType="int" parameterType="String">
		select count(*) from user where uid = #{value}	
	</select>
</mapper>